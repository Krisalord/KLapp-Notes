<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- res/layout/custom_dialog_layout.xml -->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_popup_background">

        <TextView
            android:id="@+id/textViewPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:text="wokspace title" />

        <TextView
            android:id="@+id/textViewEnter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewPopup"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:text="Add new workspace" />

        <Button
            android:id="@+id/buttonOpenActivityNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewPopup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:text="+"
            android:textColor="#e2b714"
            android:textSize="60sp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>